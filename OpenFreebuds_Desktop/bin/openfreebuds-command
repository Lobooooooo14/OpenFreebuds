#!/usr/bin/env python3
import sys
import urllib.request
import urllib.error

port = 21201

if len(sys.argv) < 2:
    print("usage: openfreebuds-command [COMMAND_NAME]")
    raise SystemExit

try:
    url = "http://localhost:{}/{}".format(port, sys.argv[1])

    with urllib.request.urlopen(url) as f:
        print(f.read().decode("utf8"))

except urllib.error.URLError:
    print("Failed. Check that app started and web-server is active.")
